#!/data/data/com.termux/files/usr/bin/bash
echo -e "\e[1;33mðŸ”„ Memperbarui semua repo di $HOME...\e[0m"
for g in "$HOME"/*/.git; do
  repo="${g%/.git}"
  [ -d "$repo" ] || continue
  name="$(basename "$repo")"
  echo -e "\e[36mâ†’ $name\e[0m"
  (cd "$repo" && git pull --rebase)
done
echo -e "\e[1;32mâœ… Selesai.\e[0m"
